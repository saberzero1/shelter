# Logo key. Use Mod1 for Alt.
set $mod Mod4+Mod1
set $mod2 Mod4+Mod1+Ctrl
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Terminal
set $term wezterm

